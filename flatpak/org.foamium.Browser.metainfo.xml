<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>org.foamium.Browser</id>
  <name>Foamium</name>
  <summary>Fast, Native, Secure Web Browser</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>
  <developer_name>Fox Computer</developer_name>
  
  <description>
    <p>
      Foamium is a modern web browser built with Rust, combining the power of WebKit 
      with a beautiful native GNOME interface. Fast, secure, and designed to feel 
      right at home on your Linux desktop.
    </p>
    <p>Features include:</p>
    <ul>
      <li>Tabbed browsing with intuitive management</li>
      <li>Fast navigation controls</li>
      <li>Smart address bar with security indicators</li>
      <li>Bookmarks and browsing history</li>
      <li>Cookie and site data management</li>
      <li>Native Adwaita-styled interface</li>
    </ul>
  </description>
  
  <launchable type="desktop-id">org.foamium.Browser.desktop</launchable>
  
  <url type="homepage">https://github.com/foxcomputer/foamium</url>
